{
  "name": "telegram-payment-gateway",
  "version": "0.1.0",
  "description": "Unified payment processing for Telegram Stars → TON → Fiat conversions",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @tg-payment/core && npm run build -w @tg-payment/api && npm run build -w @tg-payment/dashboard && npm run build -w @tg-payment/sdk",
    "build:backend": "npm run build -w @tg-payment/core && npm run build -w @tg-payment/api",
    "test": "npm run test --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "bash ./scripts/clean.sh",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "worker:fees": "npm run worker:fees -w @tg-payment/core",
    "wallet:update": "node packages/core/scripts/update-platform-wallet.js",
    "migrate": "node database/migrate.js up",
    "migrate:status": "node database/migrate.js status",
    "migrate:reset": "node database/migrate.js reset",
    "db:setup": "npm run migrate",
    "docker:build": "docker build -t tg-payment-gateway .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "trigger:dev": "npx trigger.dev@latest dev",
    "trigger:deploy": "npx trigger.dev@latest deploy"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@trigger.dev/build": "^4.1.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/pg-promise": "^0.0.28",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.22",
    "axios": "^1.13.2",
    "eslint": "^8.53.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^16.0.0",
    "@trigger.dev/sdk": "^4.1.1",
    "dotenv": "^17.2.3",
    "pg": "^8.11.3",
    "pg-promise": "^12.2.0",
    "tonweb": "^0.0.66"
  }
}
