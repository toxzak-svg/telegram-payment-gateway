{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./packages",
    "baseUrl": ".",
    "paths": {
      "@tg-payment/core": ["packages/core/src"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "packages/api/src/**/*",
    "packages/core/src/**/*",
    "trigger.config.ts"
  ],
  "exclude": ["node_modules", "packages/dashboard"]
}
