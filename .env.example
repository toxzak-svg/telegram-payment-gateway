# Server / Runtime
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://tg_user:tg_pass@localhost:5432/tg_payment_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache / Queue
REDIS_URL=redis://localhost:6379

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# TON Blockchain
TON_API_KEY=your_ton_api_key_here
TON_API_URL=https://toncenter.com/api/v2/jsonRPC
TON_MAINNET=false
TON_WORKCHAIN=0
TON_WALLET_MNEMONIC="word1 word2 ... word24"

# Platform Wallet (fee collection target)
PLATFORM_TON_WALLET=EQxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# P2P DEX Integration
DEDUST_API_URL=https://api.dedust.io
STONFI_API_URL=https://api.ston.fi
DEX_SLIPPAGE_TOLERANCE=0.5

# Conversion Settings
MIN_CONVERSION_STARS=100
RATE_LOCK_DURATION_SECONDS=300
MAX_PENDING_CONVERSIONS=10
P2P_POOL_REFRESH_INTERVAL=30

# Exchange Rate Providers
COINGECKO_API_KEY=your_coingecko_key_here
COINMARKETCAP_API_KEY=your_cmc_key_here

# Fiat Settlement Connectors (Optional)
KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_api_secret
COINLIST_API_KEY=your_coinlist_api_key
COINLIST_API_SECRET=your_coinlist_api_secret
COINLIST_BASE_URL=https://trade-api.coinlist.co

# Security / Secrets
API_SECRET_KEY=your_random_secret_key_here
JWT_SECRET=your_jwt_secret_here
WALLET_ENCRYPTION_KEY=32_byte_hex_key_here

# Trigger.dev (for automated deployments)
TRIGGER_SECRET_KEY=your_trigger_secret_key_here
TRIGGER_API_URL=https://api.trigger.dev

# Render.com Deployment (for Trigger.dev tasks)
RENDER_API_KEY=your_render_api_key_here
RENDER_API_SERVICE_ID=srv_xxxxxxxxxxxxxxxxxx
RENDER_WORKER_SERVICE_IDS=srv_worker1,srv_worker2
API_HEALTH_CHECK_URL=https://your-api.onrender.com/health
