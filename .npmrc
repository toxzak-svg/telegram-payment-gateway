# NPM Performance & Space Optimization
# Faster installs and reduced disk usage

# Use lockfile for faster, deterministic installs
package-lock=true

# Reduce network requests
prefer-offline=true
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Optimize package storage
cache-min=86400
prefer-dedupe=true

# Skip unnecessary scripts for faster installs
ignore-scripts=false

# Production optimizations
audit=false
fund=false
update-notifier=false

# Workspace optimizations
workspace-concurrency=4
